{% extends 'base.html.twig' %}

{% block title %}
    Register your horse
{% endblock %}

{% block body %}
    <section class="section" id="features">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="section-heading">
                        <h2>Register:
                            <em>your horse</em>
                        </h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <table class="table table-hover text-center">
                    <thead>
                    <th scope="col">Horse</th>
                    </thead>
                    <tbody>
                    <tr>
                        <td>
                            {{ form_start(selectHorseForm) }}
                            {{ form_widget(selectHorseForm) }}
                            {{ form_end(selectHorseForm) }}
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
