{% extends 'base.html.twig' %}

{% block title %}Users List
{% endblock %}

{% block body %}
    <section class="section min-height" id="features">
        <div class="card section-heading">
            <h2 class="card-header text-center text-uppercase py-4">Users :
                <em>List</em></h2>
            <div class="card-body">
                <div id="table" class="table-responsive">
                    <table class="table-striped text-center table-hover tablesaw tablesaw-stack" data-tablesaw-mode="stack">
                        <thead>
                        <th class="text-center">Email</th>
                        <th class="text-center">Roles</th>
                        <th class="text-center">First Name</th>
                        <th class="text-center">Last Name</th>
                        <th class="text-center">Modify</th>
                        <th class="text-center">Delete</th>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr class="bordered">
                                <td class="pt-3-half">{{ user.email }}</td>
                                <td class="pt-3-half">{{ user.roles[0] |json_encode }}</td>
                                <td class="pt-3-half">{{ user.firstname }}</td>
                                <td class="pt-3-half">{{ user.lastname }}</td>
                                {% if user.roles[0] == 'ROLE_RIDER' %}
                                    <td class="pt-3-half">
                                        <a class="main-button" href="{{ path('admin_modify_user',
                                            {'id': user.id}) }}" role="button">Modify
                                        </a>
                                    </td>
                                {% elseif user.roles[0] == 'ROLE_ORGANIZER' %}
                                    <td class="pt-3-half">
                                        <a class="main-button" href="{{ path('admin_modify_user',
                                            {'id': user.id}) }}" role="button">Modify
                                        </a>
                                    </td>
                                {% elseif user.roles[0] == 'ROLE_ADMIN' %}
                                {% endif %}
                                {% if user.roles[0] == 'ROLE_RIDER' %}
                                    <td class="pt-3-half">
                                        <form method="post" data-id="{{ user.id }}" action="{{ path('admin_delete_user', {'id': user.id}) }}"
                                              id="deleteUser{{ user.id }}">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('delete' ~ user.id) }}">
                                            <input type="submit" class="main-button delete-button" value="Delete">
                                        </form>
                                    </td>
                                {% elseif user.roles[0] == 'ROLE_ORGANIZER' %}
                                    <td class="pt-3-half">
                                        <form method="post" action="{{ path('admin_delete_user', {'id': user.id}) }}"
                                              id="deleteUser{{ user.id }}">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <input type="hidden" name="_token"
                                                   value="{{ csrf_token('delete' ~ user.id) }}">
                                            <input type="submit" class="main-button delete-button" value="Delete">
                                        </form>
                                    </td>
                                {% elseif user.roles[0] == 'ROLE_ADMIN' %}
                                {% endif %}
                            </tr>
                            <script>
                                var deleteBtn = document.getElementsByClassName('delete-button');
                                var newArray = [];
                                for (var i = 0; i < deleteBtn.length; i++) {
                                    deleteBtn[i].addEventListener ('click', event => {
                                        newArray.push({{ user.id }});
                                        event.preventDefault();
                                        return Swal.fire({
                                            title: 'Are you sure?',
                                            text: "You won't be able to revert this!",
                                            icon: 'warning',
                                            showCancelButton: true,
                                            confirmButtonColor: '#3085d6',
                                            cancelButtonColor: '#d33',
                                            confirmButtonText: 'Yes, delete user!'
                                        }).then((result) => {
                                            if (result.value) {
                                                Swal.fire(
                                                    'Deleted!',
                                                    'The user has been deleted.',
                                                    'success'
                                                );
                                                document.getElementById('deleteUser' + newArray[0]).submit()
                                            }
                                        })
                                    });
                                }
                            </script>
                            {% else %}
                            <p>No user registered</p>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

