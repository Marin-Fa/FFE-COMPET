{% extends 'base.html.twig' %}

{% form_theme contestForm 'bootstrap_4_layout.html.twig' %}

{% block title %}
    Edit Contest
{% endblock %}

{% block body %}
    <section class="section min-height" id="features">
        <div class="card section-heading">
            <h2 class="card-header text-center text-uppercase py-4">Edit :
                <em>Event</em>
            </h2>
            <div class="container">
                <div class="section-features">
                    <div class="card">
                        <div class="card-body">
                            {{ form_start(contestForm) }}
                            {{ form_widget(contestForm) }}
                            <div class="form-group">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                <button class="main-button" type="submit">Send</button>
                            </div>
                            {{ form_end(contestForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}